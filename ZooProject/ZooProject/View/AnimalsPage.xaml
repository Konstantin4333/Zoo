<Page
    x:Class="ZooProject.View.AnimalsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZooProject.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:ZooProject"
    xmlns:viewmodel="clr-namespace:ZooProject.View_Models"
    Title="AnimalsPage"
    Width="900"
    Height="400"
    ShowsNavigationUI="False"
    mc:Ignorable="d">





    <Page.DataContext>
        <viewmodel:AnimalsViewModel />
    </Page.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />

            <ColumnDefinition />
            <ColumnDefinition Width="0.25*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="8"
            Grid.Column="4"
            Grid.ColumnSpan="5"
            Width="100"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding Search}"
            Content="Търси"
            FontSize="14"
            FontWeight="Bold" />

        <GroupBox
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            FontSize="16"
            FontWeight="Bold"
            Header="Виж животно">
            <ComboBox
                Width="200"
                Height="30"
                Margin="10,5,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                DisplayMemberPath="Name"
                ItemsSource="{Binding CategoryOfAnimalChoices}"
                SelectedItem="{Binding CatAnim}"
                SelectedValue="{Binding Name, Mode=TwoWay}"
                SelectedValuePath="Name" />
        </GroupBox>

        <GroupBox
            Grid.Row="4"
            Grid.RowSpan="2"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            FontSize="16"
            FontWeight="Bold"
            Header="Резултати">
            <ComboBox
                Width="200"
                Height="30"
                Margin="10,5,10,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                DisplayMemberPath="Name"
                ItemsSource="{Binding AnimalsChoices}"
                SelectedItem="{Binding SAnimal}"
                SelectedValue="{Binding Name, Mode=TwoWay}"
                SelectedValuePath="Name" />
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="16"
            FontWeight="Bold"
            Header="Резултати">
            <Image
                Width="206"
                Height="140"
                Margin="10,10,10,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="{Binding Path=SAnimal.AnimalImage}" />
        </GroupBox>

        <GroupBox
            Grid.Row="1"
            Grid.RowSpan="5"
            Grid.Column="4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            FontSize="16"
            FontWeight="Bold"
            Header="Описание">
            <TextBlock
                Margin="5,5,5,5"
                HorizontalAlignment="Stretch"
                Text="{Binding SAnimal.Description}"
                TextWrapping="Wrap">
                <TextBlock.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFFAFAFA" />
                        <GradientStop Offset="1" Color="#FF9F9D9D" />
                    </LinearGradientBrush>
                </TextBlock.Background>
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        ShadowDepth="0"
                        Color="White" />
                </TextBlock.Effect>
            </TextBlock>
        </GroupBox>


