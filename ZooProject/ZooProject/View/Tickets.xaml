<Page x:Class="ZooProject.View.Tickets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZooProject.View"
      xmlns:v="clr-namespace:ZooProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tickets">

    <Grid ButtonBase.Click="Grid_Click">

        <Grid.Background>
            <ImageBrush ImageSource="/View/MainPicture.png"/>
        </Grid.Background>

        <WrapPanel Margin="10,10,422,327">
            <v:NavButton Text="Животни" ImageSource="/Pictures/Animals.png" NavUri="/View/AnimalsPage.xaml" />
            <v:NavButton Text="Евенти" ImageSource="/Pictures/events.png" NavUri="/View/Events.xaml"  />
            <v:NavButton Text="Билети" ImageSource="/Pictures/tickets.jpg" NavUri="/View/Tickets.xaml" RenderTransformOrigin="0.94,0.479"  />
        </WrapPanel>

        <ComboBox Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,196,0,0" Height="30" />



        <Button Content="Купи"   Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="666,395,0,0" FontWeight="Bold" FontSize="14" />
        <Image HorizontalAlignment="Left" Height="196" Margin="496,170,0,0" VerticalAlignment="Top" Width="259"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,170,0,0" Text="Вид билет:" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20" UseLayoutRounding="False" FontWeight="Bold" FontSize="16"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,275,0,0" Text="Брой билети:" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20" UseLayoutRounding="False" FontWeight="Bold" FontSize="16"/>
        <ScrollBar  Width="200" VerticalAlignment="Top" Margin="7,301,0,0" Height="30" HorizontalAlignment="Left" />

    </Grid>
</Page>
