<Page x:Class="ZooProject.View.Tickets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZooProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tickets">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/View/MainPicture.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="0*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="0*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <RadioButton Content="Билети" Grid.Column="3" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Stretch"  Width="100" FontSize="20" FontWeight="Bold" FontStretch="Medium" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40"/>
        <RadioButton Content="Събития" Grid.Column="2" Margin="0,0,0,0" Grid.Row="1"  Width="100" FontSize="20" FontWeight="Bold" FontStretch="Medium" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40" IsEnabled="False" IsThreeState="True"/>
        <RadioButton Content="Животни" Grid.Column="1" Margin="0,0,0,0" Grid.Row="1"  Width="100" FontSize="20" FontWeight="Bold" FontStretch="Medium" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="40"/>


        <ComboBox Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" Height="30" Grid.Row="2" Grid.Column="1" />



        <Button Content="Купи"   Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,282,0,0" FontWeight="Bold" FontSize="14" Grid.Column="3" Grid.Row="2" />
        <Image Grid.Column="2" HorizontalAlignment="Left" Height="196" Margin="83,60,0,0" Grid.Row="2" VerticalAlignment="Top" Width="391" Grid.ColumnSpan="2"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="13,34,0,0" Grid.Row="2" Text="Вид билет:" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20" UseLayoutRounding="False" FontWeight="Bold" FontSize="16"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="13,114,0,0" Grid.Row="2" Text="Брой билети:" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20" UseLayoutRounding="False" FontWeight="Bold" FontSize="16"/>
        <ScrollBar  Width="200" VerticalAlignment="Top" Margin="10,140,0,0" Grid.Row="2" Grid.Column="1" Height="30" HorizontalAlignment="Left" />

    </Grid>
</Page>
