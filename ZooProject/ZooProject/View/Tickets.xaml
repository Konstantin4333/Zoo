<Page
    x:Class="ZooProject.View.Tickets"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZooProject.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:v="clr-namespace:ZooProject"
    xmlns:z="clr-namespace:ZooProject.View_Models"
    Title="Tickets"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ShowsNavigationUI="False"
    mc:Ignorable="d">

    <Page.DataContext>
        <z:TicketsViewModel />
    </Page.DataContext>




    <Grid>



        <Grid.RowDefinitions>

            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel Orientation="Vertical">

                <GroupBox
                    Width="240"
                    Margin="10,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    FontWeight="Bold"
                    Header="Вид на билета&#xD;&#xA;">
                    <ComboBox
                        Width="200"
                        Height="40"
                        Margin="10,5,10,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        DisplayMemberPath="TicketType"
                        ItemsSource="{Binding CategoryOfTicketsChoices}"
                        SelectedItem="{Binding CategoryOfTickets}"
                        SelectedValue="{Binding CategoryOfTickets.TicketType, Mode=TwoWay, UpdateSourceTrigger=Default}"
                        SelectedValuePath="TicketType" />
                </GroupBox>

                <GroupBox
                    Width="240"
                    Margin="10,20,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    FontWeight="Bold"
                    Header="Брой билети&#xA;">
                    <TextBox
                        Width="178"
                        Height="27"
                        Margin="5,1,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Text="{Binding CategoryOfTickets.NumOfTickets}"
                        TextWrapping="Wrap">
                        
                    </TextBox>
                </GroupBox>

                <TextBlock
                    x:Name="priceOfTicket"
                    Height="28"
                    MinWidth="120"
                    MaxWidth="200"
                    Margin="10,20,0,0"
                    HorizontalAlignment="Left"
                    Background="#FFD6D6D6"
                    FontSize="16"
                    FontWeight="Bold"
                    TextWrapping="Wrap" Width="200">

                    <Run Text="Единична цена: " />
                    <Run Text="{Binding Path=CategoryOfTickets.price, StringFormat='##.#'}" />
                     <Run Text=" лв. " />
                </TextBlock>


                <TextBlock
                    Margin="10,20,0,0"
                   HorizontalAlignment="Left"
                   TextWrapping="Wrap"
                   VerticalAlignment="Top"
                   Height="28"
                   Width="151"
                   FontSize="16"
                   FontWeight="Bold"
                   Text="Крайна цена в лв:"
                   Background="#FFD6D6D6">
                     <Run Text="Крайна цена: " />
                    <Run Text="{Binding FinalPrice, StringFormat='#'}" />
                     <Run Text=" лв. " />
                </TextBlock>

            </StackPanel>

            
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel>
                <ListView ItemsSource="{Binding Path= AddedTickets}" 
                    Height="150"
                 >
                    <ListView.View>
                        <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Резултат">
                            <GridViewColumn DisplayMemberBinding="{Binding TicketType}"
                                    Header="Вид на билета" Width="140"/>
                            <GridViewColumn DisplayMemberBinding="{Binding NumOfTickets}"  
                                    Header="Брой билети" Width="100"/>

                            <GridViewColumn DisplayMemberBinding="{Binding price}"
                                    Header="Единична цена" Width="110"/>

                        </GridView>
                    </ListView.View>
                </ListView>

            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal">

                <Button Command="{Binding Search}"
               Margin="80,0,0,10"
                Content="Добави" 
                Width="100"
                Height="30"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                
                FontWeight="Bold"
                FontSize="14" />
                
                <Button Command="{Binding Buy}"
               Margin="30,0,0,10"
                Content="Купи" 
                Width="100"
                Height="30"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                FontWeight="Bold"
                FontSize="14" />

                

            </StackPanel>
            
            
        </Grid>
        
        


